<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="기본위치" />

        <Spinner
            android:id="@+id/sp_toast_gravity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:entries="@array/toast_gravity_array"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="X축" />

        <EditText
            android:id="@+id/et_toast_x_pos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:ems="10"
            android:hint="토스트 메시지의 X축 위치 입력"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Y축" />

        <EditText
            android:id="@+id/et_toast_y_pos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:ems="10"
            android:hint="토스트 메시지의 Y축 위치 입력"
            android:inputType="textPersonName" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_show_toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="토스트 메시지 표시" />

    <Button
        android:id="@+id/btn_show_custom_toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="커스텀 토스트 메시지 표시" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="커스텀 토스트 구현" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_custom_toast_red"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FF0000"
            android:text="빨강"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_custom_toast_green"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00FF00"
            android:text="초록"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_custom_toast_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#0000FF"
            android:text="파랑"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>