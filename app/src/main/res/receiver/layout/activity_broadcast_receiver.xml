<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_header" />

    <TextView
        android:id="@+id/tv_charging_method"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="배터리 충전 방법이 표시됩니다."
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_charging_status"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="배터리 충전 상태가 표시됩니다."
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_charging_level"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="배터리 충전 레벨이 표시됩니다."
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_charging_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="배터리 정보 확인" />

    <Button
        android:id="@+id/btn_boot_auto_run"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="부팅시 앱 자동 실행 설정" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="받는 사람" />

        <EditText
            android:id="@+id/et_receiver_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:ems="10"
            android:hint="메시지 수신자의 전화번호 입력"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="메시지" />

        <EditText
            android:id="@+id/et_send_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:ems="10"
            android:hint="수신자에게 전달할 메시지 입력"
            android:inputType="textPersonName" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_send_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="메시지 전송" />

</LinearLayout>