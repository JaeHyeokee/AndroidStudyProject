<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="기본 기능"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="입력 테스트"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_basic_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:hint="테스트 문자를 입력하세요."
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btn_basic_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4CAF50"
                android:text="입력"
                android:textColor="#263238" />

            <TextView
                android:id="@+id/tv_basic_output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="입력값 출력"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="체크 테스트"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_basic_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="체크값 출력"
                android:textSize="20dp" />

            <ToggleButton
                android:id="@+id/tbtn_basic_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ToggleButton" />

            <Switch
                android:id="@+id/sw_basic_check"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Switch" />

            <CheckBox
                android:id="@+id/cb_basic_check"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="CheckBox" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_basic_print"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#673AB7"
        android:text="현재 상태 출력"
        android:textColor="#000000"
        android:textStyle="bold"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/tv_basic_print"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Result : " />

    <Button
        android:id="@+id/btn_basic_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:text="로그 출력"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_basic_toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFEB3B"
        android:text="토스트 출력"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_basic_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF5722"
        android:text="알럿 출력"
        android:textColor="#000000"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_basic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/steak" />
</LinearLayout>