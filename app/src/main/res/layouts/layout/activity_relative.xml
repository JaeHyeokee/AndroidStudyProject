<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FF0000"
        android:gravity="bottom"
        android:ignoreGravity="@id/view_ignore"
    >

        <View
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#0FF0FF" />

        <View
            android:id="@+id/view_ignore"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#0FF0FF" />

        <View
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#0FF0FF" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#00FF00">

        <View
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#0FF0FF" />

        <View
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#0FF0FF" />

        <View
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="#0FF0FF" />

        <View
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:background="#0FF0FF" />

        <View
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#0FF0FF" />

        <View
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="#0FF0FF" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#0000FF">

        <View
            android:id="@+id/view_001"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#0FF0FF" />

        <View
            android:id="@+id/view_002"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/view_001"
            android:layout_toEndOf="@id/view_001"
            android:background="#0FF0FF" />

        <View
            android:id="@+id/view_003"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toEndOf="@id/view_002"
            android:background="#0FF0FF" />

        <View
            android:id="@+id/view_004"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@id/view_002"
            android:layout_toStartOf="@id/view_003"
            android:background="#0FF0FF" />

    </RelativeLayout>

</LinearLayout>